# B2B AI E-commerce Content Generator - Staging Configuration
# This file contains staging-specific environment variables
# Copy to .env and customize for your staging environment

# Application Environment
APP_ENV=staging
DEBUG=true

# OpenAI API Configuration
# IMPORTANT: Set this to your staging OpenAI API key
OPENAI_API_KEY=your_staging_openai_api_key_here

# Server Configuration
APP_PORT=8501
NGINX_PORT=8080
NGINX_SSL_PORT=8443

# File Processing Configuration (Staging Optimized)
MAX_FILE_SIZE_MB=75
CSV_CHUNK_SIZE=150

# API Configuration (Staging Optimized)
MAX_RETRIES=4
RETRY_DELAY_BASE=1.5
RATE_LIMIT_DELAY=90

# Security Configuration (Relaxed for testing)
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Logging Configuration (More verbose for debugging)
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_BACKUP_COUNT=3

# Performance Configuration
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=150
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=150

# Monitoring Configuration (Optional)
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
GRAFANA_PASSWORD=staging_grafana_password

# Redis Configuration (Optional)
REDIS_PASSWORD=staging_redis_password

# Build Configuration
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VERSION=1.0.0-staging
VCS_REF=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")

# Health Check Configuration (More frequent for testing)
HEALTH_CHECK_INTERVAL=15s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=2

# Resource Limits (Smaller for staging)
MEMORY_LIMIT=768M
CPU_LIMIT=0.4
MEMORY_RESERVATION=384M
CPU_RESERVATION=0.2